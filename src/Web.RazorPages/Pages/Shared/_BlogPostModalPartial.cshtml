@* Модальное окно BlogPost *@
<div class="modal fade" tabindex="-1" id="blog-post-modal">
    <div class="blog-post custom-modal">
        <div class="modal-dialog modal-lg custom-modal__inner">
            <div class="container">
                <div class="modal-content custom-modal__content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            <span>&times;</span>
                        </button>
                        <div class="blog-post__title"></div>
                        <div class="blog-post__meta"></div>
                    </div>
                    <div class="modal-body clearfix">
                        <img src="" alt="" class="blog-post__img img-responsive center-block"  />
                        <div class="blog-post__content"></div>
                    </div>
                    <div class="modal-footer custom-modal__footer">
                        <button type="button" class="button button--size-sm custom-modal__close" data-dismiss="modal">
                            Close
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>