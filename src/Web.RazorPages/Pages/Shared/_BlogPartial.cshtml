@model IList<BlogPost>

@if (Model != null && Model.Any())
{
    for (int index = 0; index < Model.Count; index++)
    {
        <partial name="_BlogPostPartial" for="@Model[index]" />
        if (index < Model.Count - 1)
        {
            <hr class="blog-post-list__separator" />
        }
    }
}